@model RegistrationModel
@{
    ViewBag.Title = "Registration ";
}
<h2>  Registration  </h2>
<div asp-validation-summary="All"></div>
<form class="form defaultForm" asp-action="Register" asp-controller="Account" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        <label asp-for="Username"></label>
        @*<div><span asp-validation-for="Username"></span></div>*@
        <input asp-for="Username" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Firstname"></label>
        @*<div><span asp-validation-for="FirstName"></span></div>*@
        <input asp-for="Firstname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Lastname"></label>
        @*<div><span asp-validation-for="LastName"></span></div>*@
        <input asp-for="Lastname" class="form-control" />
    </div>
       <div class="form-group">
        <label asp-for="Email"></label>
        @*<div><span asp-validation-for="Email"></span></div>*@
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        @*<div><span asp-validation-for="Password"></span></div>*@
        <input asp-for="Password" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        @*<div><span asp-validation-for="ConfirmPassword"></span></div>*@
        <input asp-for="ConfirmPassword" />
    </div>
    <button class=" button greenButton" type="submit">Register</button>
</form>

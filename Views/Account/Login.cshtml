@model LoginModel
@{
    ViewBag.Title = "Log In";
}
<h2>  Login </h2>
<div asp-validation-summary="All"></div>
<form class= "form defaultForm" asp-action="Login" asp-controller="Account" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        <label asp-for="Name"></label>
        @*<div><span asp-validation-for="Name" ></span></div>*@
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        @*<div><span asp-validation-for="Password"></span></div>*@
        <input asp-for="Password"/>
    </div>
    <button class=" button greenButton" type="submit">Log In</button>
</form>


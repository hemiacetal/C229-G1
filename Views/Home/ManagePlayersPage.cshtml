@model Player
@{
    ViewBag.Title = "Add a Player - Soccer Manager";
    IEnumerable<Club> clubs = ViewBag.ClubList;
}
<!DOCTYPE html>
<html>
<body>
    <h2> Add Player </h2>
    @if (clubs.Any())
    {
        <form class="form defaultForm" asp-action="ManagePlayersPage" method="post">
            @await Html.PartialAsync("AddPlayer")
            <div>
                <button class="button greenButton" type="submit">
                    Submit
                </button>
                <button class="button redButton" asp-action="Index" type="submit">
                    Cancel
                </button>
            </div>
        </form>
    }
    else
    {
        <p>There are currently no clubs in the system, so you cannot add a player.</p>
    }

</body>
</html>


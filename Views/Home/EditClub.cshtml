@model Club
@{
    ViewBag.Title = "Edit Club";
  
}
<form class="form defaultForm" asp-action="EditClub" method="post">
    <input type="hidden" asp-for="ClubID" />
    <div class="form-group">
        <label asp-for="ClubFullName">Club Name:</label>
        <div><span asp-validation-for="ClubFullName" class="validation-summary-errors"/></div>
        <input asp-for="ClubFullName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Country">Country:</label>
        <input asp-for="Country" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="HeadCoachName">Head Coach Name:</label>
        <input asp-for="HeadCoachName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Ground">Ground:</label>
        <input asp-for="Ground" class="form-control" />
    </div>
    <div class="text-center">
        <button class="button greenButton" type="submit">Save</button>
        <button asp-action="Index" class="button redButton" type="submit">
            Cancel
        </button>
    </div>
</form>